{{yield}}
  <h1>New Question</h1>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">What's your question?</label>
        {{input  class="form-control" value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes:</label>
        {{input class="form-control" value=notes id="notes"}}
      </div>

      <button class="btn btn-success" {{action 'submitQuestion'}}>Submit</button>
    </form>
  </div>
