{{yield}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">What's your question?</label>
      {{input  value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{input value=notes id="notes"}}
    </div>

    <button class="btn btn-success" {{action 'submitQuestion'}}>Submit</button>
  </form>
</div>
